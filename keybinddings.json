{
		"command": "runCommands",
		"key": "ctrl+alt+l", // whatever keybinding you want
		"args": {
			"commands": [
				{
					"command": "workbench.action.terminal.focus",
					"when": "terminalFocus"
				},
				{
					"command": "workbench.action.terminal.toggleTerminal",
					"when": "!terminalFocus"
				},
				{
				 	"command": "workbench.action.terminal.sendSequence",
				 	"args": {
				 		"text": "powershell $env:USERPROFILE/.config/vscode-cpp-template/GenerateTemplate.ps1 ${workspaceFolder} \u000D",
				 	},

				},
			]
		},
	},
