{
    "files.exclude":{
       "**/Solution": true,
      "**/Build": true,
      "**/cmake": true,
      //"**/.vscode": true,
    },
    "search.exclude": {
       "**/Solution" :true,
       "**/Build" :true,
       "**/cmake" :true,
      // "**/.vscode":true,
   },
   "clangd.arguments": [
      "-j=12",
      "-log=verbose",
      "--pch-storage=memory",
      "--inlay-hints=0",
      "--completion-style=detailed",
      "--enable-config",
      "-pretty",
      "--background-index",
      "--cross-file-rename",
      "--all-scopes-completion"

   ],
   "C_Cpp.intelliSenseEngine": "disabled",
   "clangd.path": "clangd",
}